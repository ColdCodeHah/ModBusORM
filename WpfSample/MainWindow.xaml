<Window x:Class="WpfSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfSample"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <StackPanel>
        <WrapPanel ItemWidth="100">
            <TextBlock Text="{Binding Device.One}"/>
            <TextBlock Text="{Binding Device.Two}"/>
        </WrapPanel>
        <WrapPanel ItemWidth="100">
            <TextBlock Text="{Binding Device.Year}"/>
            <TextBlock Text="{Binding Device.Month}"/>
            <TextBlock Text="{Binding Device.Day}"/>
            <TextBlock Text="{Binding Device.Hour}"/>
            <TextBlock Text="{Binding Device.Minute}"/>
            <TextBlock Text="{Binding Device.Second}"/>
        </WrapPanel>
        <TextBlock Text="{Binding Year}"/>
    </StackPanel>
</Window>
